@model IEnumerable<Medicure_Entity.Drug>

@{
    ViewData["Title"] = "GetAllDrug";
}

<h1>All Drugs Aviable</h1>

<table class="tablel" >
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Patient" asp-action="Index" asp-route-id="@ViewBag.Id">Back</a>
</div>
